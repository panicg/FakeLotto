<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/fl_line"
        android:layout_width="20dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_board_1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="A" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_result"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/fl_line"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_board_2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="낙첨" />

    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_num"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/fl_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_board_2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_win_1"
                style="@style/TextView_CLR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/clr_1"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_win_2"
                style="@style/TextView_CLR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/clr_1"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_win_3"
                style="@style/TextView_CLR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/clr_1"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_win_4"
                style="@style/TextView_CLR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/clr_1"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_win_5"
                style="@style/TextView_CLR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/clr_1"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_win_6"
                style="@style/TextView_CLR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/clr_1"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:text="1" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>